<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/component_scan_result_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="@dimen/spacing_small"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/shield_warning"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/component_scan_result_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Scan result type"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_text" />

    <TextView
        android:id="@+id/component_scan_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Loading"
        android:textColor="@color/white"
        android:textSize="52sp" />

    <TextView
        android:id="@+id/component_scan_result_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:gravity="center"
        android:text="Scan result description"
        android:textColor="@color/white_50"
        android:textSize="@dimen/font_size_subtext" />

    <TextView
        android:id="@+id/component_scan_result_last_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:gravity="center"
        android:text="Last report: -"
        android:textColor="@color/white_50"
        android:textSize="@dimen/font_size_subtext" />

    <Button
        android:id="@+id/component_scan_result_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_semibold"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingBottom="@dimen/spacing_medium"
        android:text="Button text"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>