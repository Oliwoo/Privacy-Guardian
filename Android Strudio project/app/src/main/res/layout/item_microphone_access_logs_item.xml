<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_microphone_access_logs_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/component_home_category_btn_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_medium">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_microphone_access_logs_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:fontFamily="@font/inter_semibold"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_text" />

        <TextView
            android:id="@+id/item_microphone_access_logs_item_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SubTitle"
            android:textColor="@color/white_50"
            android:textSize="@dimen/font_size_subtext" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_microphone_access_logs_item_collapse"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/spacing_medium"
        android:padding="@dimen/spacing_small"
        app:srcCompat="@drawable/arrow_right"
        tools:ignore="ContentDescription" />

</LinearLayout>