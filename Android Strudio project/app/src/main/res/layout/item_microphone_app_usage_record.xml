<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_microphone_app_usage_record"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_microphone_app_usage_record_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="@dimen/spacing_small"
        android:padding="@dimen/spacing_small"
        app:srcCompat="@drawable/unknown_package_icon"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_microphone_app_usage_record_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_subtext" />

        <TextView
            android:id="@+id/item_microphone_app_usage_record_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SubTitle"
            android:textColor="@color/white_50"
            android:textSize="@dimen/font_size_subtext" />

    </LinearLayout>
</LinearLayout>