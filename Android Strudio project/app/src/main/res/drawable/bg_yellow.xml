<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/bg" />
    </shape>
  </item>

  <item
      android:top="-250dp" android:gravity="top|center_horizontal">
    <shape android:shape="oval">
      <gradient
          android:type="radial"
          android:gradientRadius="400dp"
          android:centerX="0.5"
          android:centerY="0.5"
          android:startColor="@color/medium"
          android:endColor="@color/bg" />
      <size
          android:width="800dp" android:height="800dp" /> </shape>
  </item>
</layer-list>