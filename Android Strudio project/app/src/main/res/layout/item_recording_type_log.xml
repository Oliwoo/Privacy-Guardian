<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_recording_type_log"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/component_home_category_btn_bg"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_recording_type_log_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Record type"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_text" />

        <TextView
            android:id="@+id/item_recording_type_log_rec_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recording time: -"
            android:textColor="@color/white_50"
            android:textSize="@dimen/font_size_subtext" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_recording_type_log_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>